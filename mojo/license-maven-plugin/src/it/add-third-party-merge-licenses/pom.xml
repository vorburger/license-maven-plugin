<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <!-- ************************************************************* -->
  <!-- *** POM Relationships *************************************** -->
  <!-- ************************************************************* -->

  <groupId>org.codehaus.mojo.license.test</groupId>
  <artifactId>test-add-third-party-merge-license</artifactId>
  <version>@pom.version@</version>

  <!-- ************************************************************* -->
  <!-- *** Project Information ************************************* -->
  <!-- ************************************************************* -->

  <name>License Test :: add-third-party - merge-license</name>

  <!-- ************************************************************* -->
  <!-- *** Build Settings ****************************************** -->
  <!-- ************************************************************* -->

  <properties>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <license.verbose>true</license.verbose>
  </properties>

  <dependencies>

    <!-- use license 'The Apache Software License, Version 2.0' -->
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
    </dependency>

    <!-- use license 'Apache License, Version 2.0' -->
    <dependency>
      <groupId>com.jhlabs</groupId>
      <artifactId>filters</artifactId>
      <version>2.0.235</version>
    </dependency>

    <!-- use license 'Apache Public License 2.0' -->
    <dependency>
      <groupId>org.sonatype.plexus</groupId>
      <artifactId>plexus-cipher</artifactId>
      <version>1.4</version>
    </dependency>
  </dependencies>
  <build>

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>singleList</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>add-third-party</goal>
            </goals>
            <configuration>
              <thirdPartyFilename>THIRD-PARTY-singleList.txt</thirdPartyFilename>
              <licenseMerges>
                <licenseMerge>The Apache Software License, Version 2.0|Apache License, Version 2.0|Apache Public License 2.0
                </licenseMerge>
              </licenseMerges>
            </configuration>
          </execution>
          <execution>
            <id>singleListSplit</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>add-third-party</goal>
            </goals>
            <configuration>
              <thirdPartyFilename>THIRD-PARTY-singleListSplit.txt</thirdPartyFilename>
              <licenseMerges>
                <licenseMerge>    The Apache Software License, Version 2.0


                  |
                    Apache License, Version 2.0

                  |
                                                     Apache Public License 2.0


                </licenseMerge>
              </licenseMerges>
            </configuration>
          </execution>
          <execution>
          <id>twoList</id>
          <phase>generate-resources</phase>
          <goals>
            <goal>add-third-party</goal>
          </goals>
          <configuration>
            <thirdPartyFilename>THIRD-PARTY-twoList.txt</thirdPartyFilename>
            <licenseMerges>
              <licenseMerge>The Apache Software License, Version 2.0|Apache License, Version 2.0</licenseMerge>
              <licenseMerge>The Apache Software License, Version 2.0|Apache Public License 2.0</licenseMerge>
            </licenseMerges>
          </configuration>
          </execution>
          <execution>
            <id>twoListSplit</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>add-third-party</goal>
            </goals>
            <configuration>
              <thirdPartyFilename>THIRD-PARTY-twoListSplit.txt</thirdPartyFilename>
              <licenseMerges>
                <licenseMerge>    The Apache Software License, Version 2.0


                  |     Apache License, Version 2.0       </licenseMerge>
                <licenseMerge> The Apache Software License, Version 2.0 |

                  Apache Public License 2.0

                </licenseMerge>
              </licenseMerges>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>license-maven-plugin</artifactId>
          <version>@pom.version@</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>


